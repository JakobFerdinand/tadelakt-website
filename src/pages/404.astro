---
import Layout from '../layouts/Layout.astro';
import Meta from '../components/Meta/Meta.astro';

import styles from './index.module.sass';
---

<Layout renderHeader={false} renderFooter={false}>
  <Meta slot="head" title="404" description="Nicht gefunden" />

  <div>
    <div style="text-align: center; padding-top: 120px;">
      <h2>404</h2>
      <p>Diese Seite wurde nicht gefunden.</p>
    </div>

    <a
      href="/"
      style="position: absolute; top: 50%; text-align: center; display: block; width: 100%; padding-top: 50px;"
      class={styles.more}
    >
      <p>
        Zur Startseite
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 320 512"
          aria-hidden="true"
          focusable="false"
          style="margin-left: 5px; width: 15px; height: 15px; margin-top: 15px; vertical-align: sub;"
        >
          <path
            fill="currentColor"
            d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"
          ></path>
        </svg>
      </p>
    </a>
  </div>
</Layout>
