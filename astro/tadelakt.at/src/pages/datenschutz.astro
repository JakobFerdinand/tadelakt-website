import styles from './index.module.sass';

const description =
  'Alle rechtlichen Informationen zu unserer Website k\u00f6nnen Sie auf dieser Seite nachlesen.';
---

<Layout
  title="Datenschutz"
  headerBackground={'#7b2614 url("/theme/images/alternative-header-background.png")'}
>
  <Meta slot="head" title="Datenschutz" description={description} />

  <div class={styles.container}>
